{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block page_class %}page-auth{% endblock %}

{% block body %}
<div class="auth-container">
    <h1>Registro</h1>

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.nombreUsuario) }}
        {{ form_row(registrationForm.plainPassword) }}

        <div style="margin:10px 0;">
            <strong>Código de verificación:</strong><br>
            <div style="font-size:24px; letter-spacing:4px; background:#eee; padding:10px; display:inline-block;">
                {{ app.session.get('captcha_code') }}
            </div>
        </div>

        {{ form_row(registrationForm.captcha) }}

        <button type="submit">Registrarse</button>

    {{ form_end(registrationForm) }}

    <p style="margin-top:10px; text-align:center;">
        ¿Ya tienes cuenta?
        <a href="{{ path('app_login') }}">Inicia sesión</a>
    </p>
</div>
{% endblock %}